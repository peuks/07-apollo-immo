{% extends 'base.html.twig' %}

{% block title "Apollo Immo | Articles" %}

{% block body %}
	<div class="container">

		<div class="row">
			<h1 class="mt-4">Nos cat√©gories</h1>
		</div>
		<div class="row">
			<div class="card-group ">
				{% for category in categories %}
					<div class="card col">
						<div class="card-body">
							<h5 class="card-title">{{category.title}}</h5>
							<ul class="list-group">
								{% for article in category.articles %}
									<li class="list-group-item">
										{{ article.content }}
									</li>
								{% endfor %}
							</ul>

							<p class="card-text">
								<small class="text-muted">Last updated 3 mins ago</small>
							</p>
						</div>
					</div>
				{% endfor %}

				<ul
					class="list-group">{# <li class="list-group-item">{{ categories }}</li> #}


				</ul>

			</div>
		</div>
	{% endblock %}
